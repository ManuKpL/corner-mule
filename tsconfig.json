{
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "commonJS",
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
