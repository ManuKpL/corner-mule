{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonJS",
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
